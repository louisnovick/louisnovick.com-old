!!!
%html
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %title= "#{ current_page.data.title } | Louis Novick"
    = stylesheet_link_tag "normalize", "all"
    %link{:href => "http://fonts.googleapis.com/css?family=Enriqueta|Oxygen:700,400", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "//cdn.jsdelivr.net/jquery.slick/1.4.1/slick.css", :rel => "stylesheet", :type => "text/css"}/

  %body{:class => page_classes}

    = yield

    %footer.footer{:role => "contentinfo"}
      %ul
        %li
          %a{:href => "#work"} Work
        %li
          %a{:href => "#blog"} Blog
        %li
          %a{:href => "#contact"} Contact
      .footer-secondary-links
        %ul
          %li
            %a{:href => "javascript:void(0)"} Privacy Policy
        %ul.footer-social
          %li
            %a{:href => "javascript:void(0)"}
              %img{:alt => "Facebook", :src => "https://raw.githubusercontent.com/thoughtbot/refills/master/source/images/facebook-logo-circle.png"}
          %li
            %a{:href => "javascript:void(0)"}
              %img{:alt => "Twitter", :src => "https://raw.githubusercontent.com/thoughtbot/refills/master/source/images/twitter-logo-circle.png"}
          


= javascript_include_tag '//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js'
= javascript_include_tag '//cdn.jsdelivr.net/jquery.slick/1.4.1/slick.min.js'
= javascript_include_tag 'all'
:javascript
  $(function() {
    Grid.init();
  });

